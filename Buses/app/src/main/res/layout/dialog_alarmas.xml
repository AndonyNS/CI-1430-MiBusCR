<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/black"
                tools:context="com.example.busdevelop.buses.CrearCuentaActivity"
                android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tiempo de aviso:"
        android:id="@+id/textViewTiempo"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tiempo"
        android:layout_alignStart="@+id/tiempo"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tiempo"
        android:background="@color/white"
        android:layout_below="@+id/textViewTiempo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ruta:"
        android:id="@+id/textViewRuta"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tiempo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/rutas"
        android:background="@color/white"
        android:layout_below="@+id/textViewRuta"
        android:layout_alignLeft="@+id/textViewRuta"
        android:layout_alignStart="@+id/textViewRuta"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parada: "
        android:id="@+id/textViewParada"
        android:textColor="@color/white"
        android:layout_below="@+id/rutas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/paradas"
        android:background="@color/white"
        android:layout_below="@+id/textViewParada"
        android:layout_alignLeft="@+id/textViewParada"
        android:layout_alignStart="@+id/textViewParada"/>
    <!--android:layout_alignLeft="@+id/rutas"
    android:layout_alignStart="@+id/rutas"/>
    android:layout_toRightOf="@+id/textViewParada"
    android:layout_below="@+id/rutas"
    android:layout_marginTop="13dp"
    android:layout_marginRight="5dp" /-->



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:id="@+id/buttonCrear"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="establecerAlarma"/>

</RelativeLayout>