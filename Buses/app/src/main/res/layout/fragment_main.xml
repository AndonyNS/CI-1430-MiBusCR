<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.busdevelop.buses.MainMenuFragment"
    android:background="@drawable/gradiente">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventos"
        android:onClick=""
        android:drawableTop="@drawable/evento"
        android:id="@+id/Eventosbutton"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:translationX="-20dp"
        android:translationY="-20dp"
        android:layout_toRightOf="@+id/Favoritosbutton"
        android:layout_below="@+id/Favoritosbutton"
        android:layout_alignBottom="@+id/Ubicacionbutton"
        android:layout_alignRight="@+id/Alarmabutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ubicacion"
        android:onClick=""
        android:drawableTop="@drawable/ubicacion"
        android:id="@+id/Ubicacionbutton"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:translationX="20dp"
        android:translationY="-20dp"
        android:layout_below="@+id/Favoritosbutton"
        android:layout_toLeftOf="@+id/Favoritosbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Rutas "
        android:onClick="iniciarRutas"
        android:drawableTop="@drawable/ruta"
        android:id="@+id/Rutasbutton"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:translationX="20dp"
        android:translationY="20dp"
        android:layout_alignTop="@+id/Alarmabutton"
        android:layout_above="@+id/Favoritosbutton"
        android:layout_toLeftOf="@+id/Favoritosbutton"
        android:layout_alignLeft="@+id/Ubicacionbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarmas"
        android:onClick=""
        android:drawableTop="@drawable/alarma"
        android:id="@+id/Alarmabutton"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:layout_toEndOf="@+id/Login"
        android:translationX="-20dp"
        android:translationY="20dp"
        android:layout_above="@+id/Favoritosbutton"
        android:layout_toRightOf="@+id/Favoritosbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritas"
        android:onClick="iniciarFavoritos"
        android:drawableTop="@drawable/favoritos"
        android:id="@+id/Favoritosbutton"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
