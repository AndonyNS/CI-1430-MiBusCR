<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#065aad"
    tools:context="com.example.busdevelop.buses.CrearCuentaActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/layout_border"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:"
            android:id="@+id/textView"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre: "
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/emailUsuario"
            android:layout_toRightOf="@+id/emailUsuario"
            android:layout_toEndOf="@+id/emailUsuario" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Confirmar \nContraseña:"
            android:id="@+id/textView5"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailUsuario"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nombreUsuario"
            android:layout_alignTop="@+id/emailUsuario"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordUsuarioN"
            android:layout_below="@+id/emailUsuario"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/emailUsuario" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contraseña:"
            android:id="@+id/textView4"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_alignBottom="@+id/passwordUsuarioN" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confPass"
            android:layout_toEndOf="@+id/textView5"
            android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha de Nacimiento:"
            android:id="@+id/textView6"
            android:layout_marginTop="27dp"
            android:layout_toStartOf="@+id/nombreUsuario"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/ciudad" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fechaNacUsuarioN"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:layout_alignBottom="@+id/textView6" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ciudad"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView6"
            android:layout_below="@+id/confPass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ciudad:"
            android:id="@+id/textView7"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignBottom="@+id/ciudad" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:id="@+id/btnCrearCuenta"
            android:background="#ee7b1012"
            android:textColor="#ffffffff"
            android:onClick="registrar"
            android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@+id/fechaNacUsuarioN"
            android:layout_toEndOf="@+id/fechaNacUsuarioN" />

    </RelativeLayout>
</RelativeLayout>