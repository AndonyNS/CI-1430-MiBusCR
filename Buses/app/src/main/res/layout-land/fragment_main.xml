<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.busdevelop.buses.MainMenuFragment"
    android:background="@drawable/gradiente">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Alarmas "
        android:onClick=""
        android:drawableTop="@drawable/alarma"
        android:id="@+id/Login"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:layout_toEndOf="@+id/button"
        android:translationX="-10dp"
        android:translationY="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button"
        android:minLines="1"
        android:lines="1"
        android:layout_alignTop="@+id/Register" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Rutas  "
        android:onClick="iniciarRutas"
        android:drawableTop="@drawable/ruta"
        android:id="@+id/Register"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:layout_toStartOf="@+id/button"
        android:translationX="10dp"
        android:translationY="10dp"
        android:minLines="1"
        android:lines="1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button"
        android:layout_alignLeft="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ubicacion"
        android:onClick=""
        android:drawableTop="@drawable/ubicacion"
        android:id="@+id/button4"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:translationX="10dp"
        android:translationY="-10dp"
        android:layout_toStartOf="@+id/button"
        android:minLines="1"
        android:lines="1"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Eventos "
        android:onClick=""
        android:drawableTop="@drawable/evento"
        android:id="@+id/button5"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:layout_toEndOf="@+id/Favoritosbutton"
        android:translationX="-10dp"
        android:translationY="-10dp"
        android:layout_alignRight="@+id/Login"
        android:layout_alignEnd="@+id/Login"
        android:layout_alignParentBottom="true"
        android:minLines="1"
        android:lines="1"
        android:layout_alignBottom="@+id/button4"
        android:layout_toRightOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritas"
        android:onClick="iniciarFavoritos"
        android:drawableTop="@drawable/favoritos"
        android:id="@+id/button"
        android:padding="30dp"
        android:textSize="13dp"
        android:background="@drawable/custom_button"
        android:layout_toEndOf="@+id/Ubicacionbutton"
        android:minLines="1"
        android:lines="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
