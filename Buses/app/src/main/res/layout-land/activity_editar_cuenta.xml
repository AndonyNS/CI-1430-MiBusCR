<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/silver"
    tools:context="com.example.busdevelop.buses.EditarCuentaActivity"
    android:baselineAligned="false"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/layout_border"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email*:"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre*: "
            android:id="@+id/textView2"
            android:layout_toEndOf="@+id/emailUsuarioEdit"
            android:layout_alignBottom="@+id/emailUsuarioEdit"
            android:layout_toRightOf="@+id/emailUsuarioEdit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contraseña*:"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/passwordUsuarioEdit"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Confirmar \nContraseña*:"
            android:id="@+id/textView6"
            android:layout_toStartOf="@+id/confPassEdit"
            android:layout_alignTop="@+id/btnCrearCuenta"
            android:layout_toLeftOf="@+id/confPassEdit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha de \nNacimiento:"
            android:id="@+id/textView4"
            android:layout_toStartOf="@+id/passwordUsuarioEdit"
            android:layout_below="@+id/btnCrearCuenta"
            android:layout_toLeftOf="@+id/passwordUsuarioEdit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ciudad:"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/ciudadEdit"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailUsuarioEdit"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />


        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nombreUsuarioEdit"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordUsuarioEdit"
            android:layout_toEndOf="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@+id/textView3" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fechaNacUsuarioEdit"
            android:layout_alignLeft="@+id/passwordUsuarioEdit"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ciudadEdit"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/fechaNacUsuarioEdit"
            android:layout_alignStart="@+id/fechaNacUsuarioEdit" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confPassEdit"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignLeft="@+id/fechaNacUsuarioEdit"
            android:layout_alignStart="@+id/fechaNacUsuarioEdit"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Actualizar Cuenta"
            android:id="@+id/btnCrearCuenta"
            android:background="#ee7b1012"

            android:textColor="#ffffffff"
            android:onClick="actualizar"
            android:layout_toEndOf="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView2" />


    </RelativeLayout>

</RelativeLayout>